import java.io.*;
public class FileRead
{
  public static void main(String[] args) throws Exception
  {
    // pass the path to the file as a parameter
    FileReader fr =
      new FileReader("/home/aishwarya/Desktop/Java_Practicle_exercises/classes_and_objects/Pe3/file.txt");

   int i;
    int length=0;
    while ((i=fr.read()) != -1)
    {    
       length++;
        
       char c = (char) i;
        char x = Character.toUpperCase(c);
        System.out.print(x);
    }
    System.out.println("");
    System.out.print("The file contains "+length+" characters.");
  }
}
