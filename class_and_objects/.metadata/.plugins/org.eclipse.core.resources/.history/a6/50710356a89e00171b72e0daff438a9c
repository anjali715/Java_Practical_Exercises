package question1;

import java.util.Scanner;

public class palindrome {
	public static void main(String[] args) {
	
	Scanner scan = new Scanner(System.in);  
	System.out.println("Enter a number: ");
	int n = scan.nextInt();
	
	
	int orig=n;
	int rev=0;
	int remainder;
	
	while(n!=0)
	{
		remainder=n%10;
		rev=rev*10+remainder;
		n/=10;
	}
	
	if (orig==rev)
	{
		System.out.println(orig+" is a palindrome and the sum of even integers is ");
		int sum=0;
		while(n!=0)
		{
		remainder=n%10;
		if (remainder%2==0)
		{
			sum+=remainder;
		}
		
		n/=10;
		}
		if (sum>25)		
			System.out.println("greater than 25");
		else
			System.out.println("less than 25");
		
		
		
	}
	else
	{				
		System.out.println(orig+" is not a palindrome.");
	}

}
}